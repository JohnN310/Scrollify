<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    tools:context=".SeeFriend" >

    <TextView
        android:id="@+id/friendHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="120dp"
        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textColor="@color/mainBrown"
        android:text="@string/your_profile"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToProfile" />

    <Button
        android:id="@+id/goToProfile"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:fontFamily="monospace"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:foreground="@drawable/profile"
        android:background="@drawable/profile"
        android:backgroundTint="@color/mainBrown"
        android:foregroundTint="@color/mainBrown"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <Button
        android:id="@+id/seeTheirWrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:backgroundTint="@color/buttonBlue"
        android:text="@string/see_wrap"
        android:textSize="14sp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/friendHeader" />

    <Button
        android:id="@+id/duoWrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:backgroundTint="@color/buttonBlue"
        android:text="@string/make_duo_wrap"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="150dp"
        android:layout_marginStart="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seeTheirWrap"/>

    <Button
        android:id="@+id/removeFriend"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:text="@string/remove_friend"
        android:textSize="14sp"
        android:fontFamily="monospace"
        android:backgroundTint="@color/buttonBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/duoWrap" />



</androidx.constraintlayout.widget.ConstraintLayout>