<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/cute_wrapped_1"
    tools:context=".SpotifyApiHelperActivityArtists"
    android:id="@+id/constraintLayout">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You Are A"
        android:textColor="@color/mainBackground"
        android:fontFamily="monospace"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginTop="160sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="majorName" />

    <TextView
        android:id="@+id/majorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/top_artists"
        android:textColor="@color/mainBackground"
        android:fontFamily="monospace"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/majorDesc"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/majorName" />

    <Button
        android:id="@+id/saveWrap"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="10dp"
        android:text="@string/save_wrap"
        android:backgroundTint="@color/mainBrown"
        android:textColor="@color/mainBackground"
        app:layout_constraintEnd_toStartOf="@id/exit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/majorDesc" />

    <Button
        android:id="@+id/exit"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="40dp"
        android:text="@string/go_home"
        android:backgroundTint="@color/mainBrown"
        android:textColor="@color/mainBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/saveWrap"
        app:layout_constraintTop_toBottomOf="@id/majorDesc" />

</androidx.constraintlayout.widget.ConstraintLayout>
