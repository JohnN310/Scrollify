<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Match the songs with their correct rank:"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/song1TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. "
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- Spinner for song 1 -->
        <Spinner
            android:id="@+id/song1Spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/song2TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. "
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- Spinner for song 2 -->
        <Spinner
            android:id="@+id/song2Spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/song3TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. "
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- Spinner for song 3 -->
        <Spinner
            android:id="@+id/song3Spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/song4TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. "
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- Spinner for song 4 -->
        <Spinner
            android:id="@+id/song4Spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/song5TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5. "
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- Spinner for song 5 -->
        <Spinner
            android:id="@+id/song5Spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
    android:text="Submit" />

</LinearLayout>
